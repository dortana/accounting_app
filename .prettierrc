{
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "useTabs": false,
  "tabWidth": 2,
  "printWidth": 80,
  "endOfLine": "lf",
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["**/*.json"],
      "options": {
        "trailingComma": "none"
      }
    }
  ]
}
