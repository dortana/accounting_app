datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

enum Status {
  ACTIVE
  INACTIVE
}

enum RegistrationStatus {
  DONE
  PENDING
}

model User {
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  email              String             @unique
  phone              String?
  image              String?
  google_id          String?
  role               Role               @default(USER)
  status             Status             @default(INACTIVE)
  stars              Float              @default(0.00)
  registrationStatus RegistrationStatus @default(PENDING)
  verified           Boolean            @default(false)
  balance            Float              @default(0.00)
  otp                Int?
  otp_expiration     DateTime?
  first_name         String
  last_name          String
  token              String?
  settings           Json?
  stay_anonymous     Boolean?           @default(false)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  JournalEntry       JournalEntry[]
}

enum JournalDocumentType {
  BA
  KA
  RB
  VB
  BK
  UM
}

model JournalEntry {
  id           String              @id @default(auto()) @map("_id") @db.ObjectId
  date         DateTime
  entrySort    Int
  documentType JournalDocumentType
  description  String
  expenseGross Float?
  incomeGross  Float?
  account      String
  taxCode      String
  vatRate      Float?
  inputVat     Float?

  // Relation to user
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([userId])
  @@map("journal_entries")
}
